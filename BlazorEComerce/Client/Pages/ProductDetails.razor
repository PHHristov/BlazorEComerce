@page "/product/{id:int}"
@inject IProductService ProductService


@if(product == null)
{
    <span>@message</span>
}
else
{
    <div class="media">
        <div class="media-img-wrapper mr-2">
            <img class="media-img me-3" src="@product.ImageUrl" alt="@product.Title"/>
        </div>
        <div class="media-body">
            <h2 class="mb-0">@product.Title</h2>
            <p>@product.Description</p>
            @if(product.Variants != null && product.Variants.Count > 1  )
            {
                <div class="mb-3">
                    <select class="form-select" @bind="currentTypeId">
                        @foreach(var variant in product.Variants)
                        {
                            <option value="@variant.ProductTypeId">@variant.ProductType.Name</option>
                        }
                    </select>
                </div>
            }
            @if(GetSelectedVariants() != null)
            {
                @if(GetSelectedVariants().OriginalPrice > GetSelectedVariants().Price)
                {
                    <h6 class="text-muted original-price">
                        $@GetSelectedVariants().OriginalPrice
                    </h6>
                }
            }
            <h4 class="price">
                @GetSelectedVariants().Price
            </h4>
        </div>
    </div>
}


