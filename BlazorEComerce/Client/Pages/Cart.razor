@page "/cart"
@inject ICartService CartService

<PageTitle>Shopping Cart</PageTitle>
<h3>Shopping Cart</h3>

@if(cartProducts == null || cartProducts.Count == 0)
{
    <span>@message</span>
}
else
{
        <div>
        @foreach (var product in cartProducts)
        {
            <div class="container">
                <div class="image-wrapper">
                    <img src="@product.imageUrl" class="image"/>
                </div>
                <div class="name">
                    <h5><a href="/prodcut/@product.ProductId">@product.Title</a></h5>
                    <span>@product.ProductType</span><br/>
                <button class="btn-delete" @onclick="@(() => 
                    RemoveProductFromCart(product.ProductId, product.ProductTypeId))">Delete</button>
                </div>
                
                <div class="cart-product-price">
                    $@product.Price
                </div>
            </div>
        }
        <div calss="cart-product-price">
            Total (@cartProducts.Count) :  $@cartProducts.Sum(product => @product.Price)
        </div>
    </div>
}
